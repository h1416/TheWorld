<!DOCTYPE html>
<html>

<head>
    <title>The World - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />>
    @*<link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div id="sidebar">
        <img src="~/img/myFace.jpg" alt="heatshot" class="headShot" />
        <span id="username">My Name</span>

        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="about">About</a></li>
            <li><a asp-controller="App" asp-action="contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle" class="btn btn-primary">Toggle Menu</button>
            </div>

            @RenderBody()
        </div>

        <div id="footer">
            &copy; 2016 AH Inc All Rights Reserved.
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jQuery/dist/jquery.min.js"></script>    
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    @RenderSection("scripts", false)

</body>

</html>