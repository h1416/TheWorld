<!DOCTYPE html>
<html>

<head>
    <title>The World - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />>
    <link href="~/lib/bootswatch/yeti/bootstrap.min.css" rel="stylesheet" /> @* for free bootstrap theme*@
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div id="sidebar">
        <img src="~/img/myFace.jpg" alt="heatshot" class="headShot" />
        <span id="username">My Name</span>

        <ul class="nav">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="about">About</a></li>
            <li><a asp-controller="App" asp-action="contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">

        <nav class="navbar navbar-inverse"></nav> @*put in the navbar and use boostrap navbar-inverse style class for it*@
        <div id="main" class="container-fluid"> @*use "container-fluid" to take as much as the webpage as possible*@ 
            <div>
                <button id="sidebarToggle" class="btn btn-success">
                    <i class="fa fa-angle-left"></i>
                </button>
            </div>

            @RenderBody()
        </div>

        <div id="footer" class="container-fluid"> @*use "container-fluid" to take as much as the webpage as possible*@ 
            <p class="text text-primary">&copy; 2016 AH Inc All Rights Reserved.</p>
            
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jQuery/dist/jquery.min.js"></script>    
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    @RenderSection("scripts", false)

</body>

</html>