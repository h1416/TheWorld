@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6 col-xs-6">
        <h1>The World</h1>
        <p>This will be a fun web app soon</p>

        <form>
            <div class="form-group">
                <label>Date</label>
                <input type="text" value="enter a date" class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input type="text" value="enter a location" class="form-control" />
            </div>
            <input type="submit" value="Add" class="btn btn-success" />
        </form>
    </div>
    <div class="col-md-6 col-xs-6">
        <h2>The Map</h2>

        <ul>
            @foreach (var item in Model)
            {
                <li>@item.Name</li>
            }
        </ul>
    </div>
</div>